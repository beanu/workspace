<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widget="http://schemas.android.com/apk/res/com.xiaojiujiu"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 头部信息 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16" >

            <ImageView
                android:id="@+id/ecard_detail_big_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/temp" />

            <TextView
                android:id="@+id/ecard_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:alpha="0.5"
                android:background="@drawable/coupon_text_bg"
                android:gravity="center"
                android:minHeight="36dp"
                android:text="小肥羊火锅电子会员卡"
                android:textSize="@dimen/textsize16" >
            </TextView>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pitch8"
            android:text="50元享原价80元套餐一份"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pitch8"
            android:layout_marginTop="@dimen/pitch4"
            android:text="离活动结束还有XX天" />

        <!-- 优惠说明 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch8"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            layout="@layout/module_offer_details" />

        <!-- 使用说明 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            layout="@layout/module_introductions" />

        <!-- 最近门店位置电话信息 -->

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            layout="@layout/module_nearby_shop" />

        <!-- 适用门店 -->

        <com.xiaojiujiu.ui.widget.LongButton
            android:id="@+id/coupon_detail_moreshops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            widget:drawableLeft="@drawable/ecard_detail_tag_stores"
            widget:text="适用门店（5家）" />
    </LinearLayout>

</ScrollView>