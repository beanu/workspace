<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 头部信息 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ecard_deatail_top_title_height"
            android:layout_marginBottom="@dimen/pitch16" >

            <ImageView
                android:id="@+id/ecard_detail_big_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/ecard_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="4dp"
                android:gravity="center_horizontal"
                android:text="小肥羊火锅电子会员卡"
                android:textSize="@dimen/smalltext" >
            </TextView>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50元享原价80元套餐一份"
            android:textColor="@color/red" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="离活动结束还有XX天" />

        <!-- 优惠说明 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_module_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/coupon_detail_xq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="优惠详情" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dotted_line" />

            <TextView
                android:id="@+id/ecard_detail_nearby_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[天桥区]50元享受80uyuan套擦一份，套餐中有xx一份，罗非鱼一份，大盘鸡一份...." />

            <TextView
                android:id="@+id/ecard_detail_nearby_shop_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="参看图文详情>" >
            </TextView>
        </LinearLayout>

        <!-- 使用说明 -->


        <!-- 最近门店位置电话信息 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_module_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/coupon_detail_nearby_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小肥羊" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dotted_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/coupon_detail_nearby_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="地址" />

                <TextView
                    android:id="@+id/coupon_detail_nearby_shop_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/coupon_detail_nearby_shop_address"
                    android:drawableLeft="@drawable/ecard_detail_tag_distance"
                    android:text="1000" >
                </TextView>

                <ImageView
                    android:id="@+id/coupon_detail_nearby_shop_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ecard_detail_tag_phone" >
                </ImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/coupon_detail_nearby_shop_phone"
                    android:src="@drawable/ecard_detail_tag_vline" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 适用门店 -->

        <RelativeLayout
            android:id="@+id/coupon_detail_moreshops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_button" >

            <ImageView
                android:id="@+id/coupon_detail_tag_stores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/pitch8"
                android:src="@drawable/ecard_detail_tag_stores" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/coupon_detail_tag_stores"
                android:text="适用门店（5家）"
                android:textSize="@dimen/smalltext" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pitch12"
                android:src="@drawable/arrows" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>