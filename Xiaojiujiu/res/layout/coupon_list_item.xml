<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/coupon_list_item_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="@dimen/pitch4"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <TextView
            android:id="@+id/coupon_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="80dp"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:singleLine="true"
            android:text="小汾阳"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/coupon_list_item_title"
            android:layout_marginRight="@dimen/pitch8"
            android:layout_marginTop="@dimen/pitch4"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/coupon_list_item_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/coupon_list_item_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/coupon_list_item_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/coupon_list_item_tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/coupon_list_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/coupon_list_item_title"
            android:layout_marginTop="@dimen/pitch4"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxLines="2"
            android:text="限时抢购，夏季所有衣服5折出售,55折出售了....."
            android:textColor="@color/coupon_item_content"
            android:textSize="@dimen/textsize14" />

        <TextView
            android:id="@+id/coupon_list_item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/coupon_list_item_content"
            android:layout_marginTop="@dimen/pitch4"
            android:text="地址：济南天桥区北园大街"
            android:textColor="@color/ecard_detail_discount"
            android:textSize="@dimen/textsize12" />
    </RelativeLayout>

</LinearLayout>