<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="3dp" >

    <ImageView
        android:id="@+id/coupon_list_item_img"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="0.5"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/coupon_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:singleLine="true"
            android:textColor="@color/abs__primary_text_holo_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/coupon_list_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="@color/abs__background_holo_dark"
            android:textSize="@dimen/smalltext" />
    </LinearLayout>

</LinearLayout>