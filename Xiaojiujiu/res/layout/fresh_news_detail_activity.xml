<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fresh_news_detail_img"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/default_avatar"
            android:layout_margin="@dimen/pitch16"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/fresh_news_detail_title"
            android:layout_toRightOf="@+id/fresh_news_detail_img"
            android:layout_alignTop="@+id/fresh_news_detail_img"
            android:layout_marginTop="@dimen/pitch16"
            android:textSize="@dimen/textsize18"
            android:text="大人大法官"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/pitch16"
        android:layout_marginBottom="@dimen/pitch16"
        android:background="@drawable/abc_list_divider_holo_light"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pitch8"
        android:text="啊嘎卡斯代理机构；卢卡斯觉得公开辣椒丝大哥"/>


</LinearLayout>