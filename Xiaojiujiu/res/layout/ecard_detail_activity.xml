<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 图片 -->

        <ImageView
            android:id="@+id/ecard_detail_big_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="96dp"
            android:src="@drawable/abs__progress_bg_holo_dark" />

        <!-- 会员卡说明 -->

        <TextView
            android:id="@+id/ecard_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch8"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginTop="@dimen/pitch16"
            android:text="删除掉"
            android:textSize="@dimen/mediumtext" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_module_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ecard_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TextView>

            <TextView
                android:id="@+id/ecard_detail_effectiveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- 查看更多 -->

        <RelativeLayout
            android:id="@+id/ecard_detail_moreinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_button" >

            <ImageView
                android:id="@+id/ecard_detail_tag_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/pitch8"
                android:src="@drawable/ecard_detail_tag_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ecard_detail_tag_more"
                android:text="@string/ecard_detail_see_more"
                android:textSize="@dimen/smalltext" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pitch12"
                android:src="@drawable/arrows" />
        </RelativeLayout>

        <!-- 最近门店位置电话信息 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_module_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ecard_detail_nearby_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小肥羊" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dotted_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/ecard_detail_nearby_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="地址" />

                <TextView
                    android:id="@+id/ecard_detail_nearby_shop_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/ecard_detail_nearby_shop_address"
                    android:drawableLeft="@drawable/ecard_detail_tag_distance" >
                </TextView>

                <ImageView
                    android:id="@+id/ecard_detail_nearby_shop_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ecard_detail_tag_phone" >
                </ImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/ecard_detail_nearby_shop_phone"
                    android:src="@drawable/ecard_detail_tag_vline" />
            </RelativeLayout>

            <TextView
                android:id="@+id/ecard_detail_nearby_shop_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="查看更多分店" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>