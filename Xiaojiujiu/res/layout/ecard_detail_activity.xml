<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 头部信息 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ecard_deatail_top_title_height"
            android:layout_marginBottom="@dimen/pitch16"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ecard_detail_big_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="@dimen/pitch12"
                android:src="@drawable/ic_launcher" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/ecard_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="@dimen/pitch12"
                    android:layout_marginTop="@dimen/pitch12"
                    android:text="小肥羊火锅电子会员卡"
                    android:textSize="@dimen/smalltext" >
                </TextView>

                <TextView
                    android:id="@+id/ecard_detail_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="12dp"
                    android:drawableLeft="@drawable/ecard_detail_tag_distance"
                    android:drawablePadding="4dp"
                    android:text="1000" />

                <TextView
                    android:id="@+id/ecard_detail_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/ecard_detail_score"
                    android:drawableLeft="@drawable/ecard_detail_tag_distance"
                    android:drawablePadding="4dp"
                    android:text="钻石卡" />

                <TextView
                    android:id="@+id/ecard_detail_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="12dp"
                    android:layout_marginRight="@dimen/pitch12"
                    android:text="8折" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 会员卡说明 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_module_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ecard_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="使用说明那个，说明，说明，说明" >
            </TextView>

            <TextView
                android:id="@+id/ecard_detail_effectiveTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期：2014年1月1号" />
        </LinearLayout>

        <!-- 查看更多 -->

        <RelativeLayout
            android:id="@+id/ecard_detail_moreinfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_button" >

            <ImageView
                android:id="@+id/ecard_detail_tag_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/pitch8"
                android:src="@drawable/ecard_detail_tag_more" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ecard_detail_tag_more"
                android:text="@string/ecard_detail_see_more"
                android:textSize="@dimen/smalltext" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pitch12"
                android:src="@drawable/arrows" />
        </RelativeLayout>

        <!-- 最近门店位置电话信息 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_module_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ecard_detail_nearby_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小肥羊" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dotted_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/ecard_detail_nearby_shop_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="地址" />

                <TextView
                    android:id="@+id/ecard_detail_nearby_shop_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/ecard_detail_nearby_shop_address"
                    android:drawableLeft="@drawable/ecard_detail_tag_distance" >
                </TextView>

                <ImageView
                    android:id="@+id/ecard_detail_nearby_shop_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ecard_detail_tag_phone" >
                </ImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/ecard_detail_nearby_shop_phone"
                    android:src="@drawable/ecard_detail_tag_vline" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 适用门店 -->

        <RelativeLayout
            android:id="@+id/ecard_detail_moreshops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_button" >

            <ImageView
                android:id="@+id/ecard_detail_tag_stores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/pitch8"
                android:src="@drawable/ecard_detail_tag_stores" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ecard_detail_tag_stores"
                android:text="适用门店（5家）"
                android:textSize="@dimen/smalltext" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pitch12"
                android:src="@drawable/arrows" />
        </RelativeLayout>

        <!-- 优惠活动 -->

        <RelativeLayout
            android:id="@+id/ecard_detail_promotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pitch16"
            android:layout_marginLeft="@dimen/pitch16"
            android:layout_marginRight="@dimen/pitch16"
            android:background="@drawable/ecard_detail_button" >

            <ImageView
                android:id="@+id/ecard_detail_tag_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/pitch8"
                android:src="@drawable/ecard_detail_tag_promotion" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ecard_detail_tag_promotion"
                android:text="优惠活动"
                android:textSize="@dimen/smalltext" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/pitch12"
                android:src="@drawable/arrows" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>