<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/pitch16" >

    <TextView
        android:id="@+id/coupon_nearby_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/pitch8"
        android:layout_marginTop="@dimen/pitch8"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="小肥羊"
        android:textColor="@color/ecard_detail_title"
        android:textSize="@dimen/textsize17" />

    <TextView
        android:id="@+id/coupon_nearby_shop_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/coupon_nearby_shop_name"
        android:layout_marginRight="66dp"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="地址:济南条取闹的洪家楼"
        android:textColor="@color/ecard_detail_discount"
        android:textSize="@dimen/textsize14" />

    <TextView
        android:id="@+id/coupon_nearby_shop_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/coupon_nearby_shop_address"
        android:layout_marginTop="@dimen/pitch4"
        android:drawableLeft="@drawable/ecard_detail_tag_distance"
        android:drawablePadding="@dimen/pitch4"
        android:textColor="@color/ecard_detail_discount"
        android:textSize="@dimen/textsize14" >
    </TextView>

    <ImageView
        android:id="@+id/coupon_nearby_shop_phone"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/text_press"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/ecard_detail_tag_phone" >
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/coupon_nearby_shop_phone"
        android:background="@drawable/ecard_detail_tag_vline" />

</RelativeLayout>